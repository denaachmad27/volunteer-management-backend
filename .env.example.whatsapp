# WhatsApp Integration Environment Variables
# Copy this to your .env file and configure accordingly

# WhatsApp Bridge Server Configuration
WHATSAPP_BRIDGE_URL=http://localhost:3001
WHATSAPP_PORT=3001

# WhatsApp Settings
WHATSAPP_SESSION_NAME=admin-session
WHATSAPP_AUTO_RESTART=true

# Optional: Webhook URLs for WhatsApp events
WHATSAPP_WEBHOOK_QR=
WHATSAPP_WEBHOOK_READY=
WHATSAPP_WEBHOOK_MESSAGE=

# Security (Optional)
WHATSAPP_API_KEY=
WHATSAPP_ALLOWED_IPS=127.0.0.1,localhost