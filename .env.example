APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
# Untuk produksi, gunakan HTTPS dan domain API Anda
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
# Enkripsi session data (opsional, default false)
SESSION_ENCRYPT=false
SESSION_PATH=/
# Domain cookie; gunakan .domain-anda.com di produksi untuk subdomain sharing
SESSION_DOMAIN=null
# Cookie session hanya terkirim via HTTPS di produksi
SESSION_SECURE_COOKIE=false
# Cookie HttpOnly mencegah akses JS
SESSION_HTTP_ONLY=true
# SameSite Lax disarankan untuk SPA + API
SESSION_SAME_SITE=lax
# Partitioned cookie (opsional, default false)
SESSION_PARTITIONED_COOKIE=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email Configuration for Real Email Sending
# Change MAIL_MAILER from 'log' to 'smtp' to enable real emails
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Alternative Email Providers:
# Gmail: smtp.gmail.com:587 with TLS
# Outlook: smtp-mail.outlook.com:587 with TLS
# Yahoo: smtp.mail.yahoo.com:587 with TLS
# SendGrid: smtp.sendgrid.net:587 with TLS

# Frontend URL (for email templates with action buttons)
FRONTEND_URL=http://localhost:3000

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ==========================
# Security & CORS (Sanctum)
# ==========================
# Daftar origin yang diizinkan (CSV). Contoh: https://admin.domain.com,https://app.domain.com
CORS_ALLOWED_ORIGINS=*
# Izinkan credentials (cookie) untuk CORS (set true saat pakai cookie auth)
CORS_SUPPORTS_CREDENTIALS=false
# Daftar domain stateful untuk Sanctum cookie auth (CSV)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000
# TTL token Sanctum (menit). Biarkan kosong untuk non-expiring token (tidak disarankan)
SANCTUM_EXPIRATION=
